@page
@model MenuModel

<div class="row">

    <header class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @*<h3>
                online menu
            </h3>*@
    </header>
    
    @foreach (var r in Model.menulist) {
        <div id="menu" class="col-lg-3 col-md-3 col-sm-3 col-xs-12" style="">
            <div style="height:180px; width:100%;">
                <img src="@Url.Content(r.ImageReferaceId)" />
               </div>
            <div style="width:100%; text-align:center">
                <br />         
                <h3>
                    <label for="" style="color:#febc11">@r.menuname</label> |
                    <label for="" style="">@r.price</label> 
                </h3>
                   
            </div>
        </div>
    }


</div>
<div>

    <br />
    <br />
