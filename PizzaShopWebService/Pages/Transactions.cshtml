@page
@model TransactionsModel





<div class="row">

    <header class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h3>
            transactions
        </h3>
    </header>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <h4>
            Search transactions by phone number
        </h4>
        <input type="text" name="ContactName" value="" placeholder="(555) 55 5555" style="width:80%" />
        <input type="submit" value="search" class="submit" style="width:19%" />
        <hr />
        <table style="width:100%; text-align:center">
            <thead style="font-weight:bold; background-color:lightgray">
                <tr>

                    <td>
                        <h4>
                            Transaction Id
                        </h4>
                    </td>
                    <td>
                        <h4>Name</h4>
                    </td>
                    <td>
                        <h4>address</h4>
                    </td>
                    <td>
                        <h4>Phone number</h4>
                    </td>

                    <td>
                        <h4>Date</h4>
                    </td>
                    <td>
                        <h4>PaymentType</h4>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.ReturnAllTransaction())
                {
                <tr style="height:50px; border-bottom:1px solid lightgray; font-weight:normal">

                    <td> <h5>
    @r.TransactionID
</h5></td>
                    <td> <h5>
    @r.Customer.Name
</h5></td>
                    <td>
                        <h5>  @r.Customer.Address</h5>
                  </td>
                    <td>
                        <h5>
                            @r.CustomerPhoneNumber
                        </h5>
                    </td>

                    <td>
                        <h5> @r.Date</h5>
                       
                    </td>
                    <td>
                        <h5> @r.PaymentType</h5>
                       
                    </td>


                </tr>

                }

            </tbody>
        </table>
    </div>









</div>

