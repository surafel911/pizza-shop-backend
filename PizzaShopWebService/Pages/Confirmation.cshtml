@page
@model ConfirmationModel
@using PizzaShopWebService.Models

@{
	ViewData["Title"] = "Order Confirmation";
}

<div class="row">
	<header class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<h3> Payment Confirmation </h3>
	</header>

	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="text-align:left; padding-left:100px;top:80px; vertical-align:central">
		<div style="text-align:left; padding:0%; margin-bottom:5%">
			<h3 style="text-align:left;">
				Total amount  <b> $@Model.Total </b>
			</h3>

			<br /> 

			<label> You will pay with </label>
		</div>

		<br />

		<button type="button" class="btn btn-secondary btn-lg" disabled> @Model.PaymentType </button>

		<br /> <br />

		@if(@Model.CardUsed) {
			<button type="button" class="btn btn-secondary btn-lg" disabled> @Model.PaymentDTO.Name </button>
			<br /> <br />
			<button type="button" class="btn btn-secondary btn-lg" disabled> ****-****-****-@Model.LastFourOfCardNumber </button>
		}

		<br /><br />

		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="text-align:center; top:80px;  vertical-align:central">
			<div id ="formCheck" style="margin-top:20%;">
				<form method="post">
					<input type="submit" asp-page="/Confirmation" value="Continue" class="submit" />
				</form>

				<br /> <br />

				<form method="get">	
					@if(@Model.CardUsed) {
						<input type="submit" asp-page="/Payment" value="Back" class="submit" />
					} else {
						<input type="submit" asp-page="/PaymentMethod" value="Back" class="submit" />
					}

					<br /> <br />
					@*<input type="submit" asp-page="/NewPayment" value="go back" class="submit" style="width:59%" /> <br /> <br />*@
				</form>
			</div>
		</div>
	</div>

	@*
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<form id="formCheck" method="post" style="margin-top:25%;">
			<input type="submit" value="conferm to percide" class="submit" style="width:59%" /> <br /> <br />
			<input type="submit" value="decline" class="submit" style="width:59%" /> <br /> <br />
		</form>
	</div>
	*@

	@*
	<footer class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<input type="submit" value="continue" style="width:15%;  background-color:lightgray; float:right"  class="submit" />
	</footer>
	*@
</div>

